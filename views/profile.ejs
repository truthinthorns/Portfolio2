<h1>Profile</h1>

<div class="card mb-2">
    <div class="card-body">
      <h5 class="card-title text-dark"><strong><%= user.name %></strong></h5>
      <h6 class="card-subtitle mb-2 text-muted">@<%= user.username %></h6>
      <p class="card-text text-dark"><%= user.bio %></p>
      <p class="card-text text-muted">Born <%= birthMonth %> <%= user.dob.getDate()+1 %>, <%= user.dob.getFullYear() %></p>
      <p class="card-text text-muted">Joined <%= joinMonth %> <%= user.joinDate.getFullYear() %></p>
      <a href="" class="card-link">Edit Profile</a>
    </div>
</div>
<% for (let tweet of tweets) {%>
  <div class="card mb-3 w-50 offset-3">
      <div class="row">
          <div class="col">
              <div class="card-body">
                  <h4 class="card-title text-dark">
                      @<%= tweet.author.username %>
                  </h4>
                  <p class="card-text text-dark">
                      <%= tweet.content %>
                  </p>
                  <p class="card-text"><svg
                          class="bi" width="1em" height="1em" style="fill: red;">
                          <use xlink:href="#heart-empty" />
                          </svg>
                  </p>
              </div>
          </div>
      </div>
  </div>
  <% } %>