<% layout('layouts/boilerplate') %>
<div class="row m-5">
    <div class="col-4 mx-auto">
        <%- include('./partials/flash') %>
        <div class="card">
            <div class="card-body mx-auto">
                <h2 class="card-title text-dark">Sign Up</h2>
            </div>
            <div class="card-body mx-auto">
                <form action="/signup" method="post" class="validate-form" novalidate>
                    <div class="mb-2">
                        <label for="s_nameInput" class="form-label text-dark">Full Name</label>
                        <input type="text" class="form-control" id="s_nameInput" name="name"
                            required>
                    </div>
                    <div class="mb-2">
                        <label for="s_usernameInput" class="form-label text-dark">Username</label>
                        <input type="text" class="form-control" id="s_usernameInput" name="username" aria-describedby="s_usernameHelp"
                            required>
                        <div id="s_usernameHelp" class="form-text">This is what you will use to login.</div>
                    </div>
                    <div class="mb-2">
                        <label for="s_dobInput" class="form-label text-dark">Date of Birth</label>
                        <input type="date" class="form-control" id="s_dobInput" name="dob" required>
                    </div>
                    <div class="mb-2">
                        <label for="s_emailInput" class="form-label text-dark">Email address</label>
                        <input type="email" class="form-control" id="s_emailInput"
                            aria-describedby="s_emailHelp" name="email" required>
                    </div>
                    <div class="mb-4">
                        <label for="s_passwordInput" class="form-label text-dark">Password</label>
                        <input type="password" class="form-control" id="s_passwordInput"
                            aria-describedby="s_passwordHelp" name="password" required>
                        <div id="s_passwordHelp" class="form-text">Password Format</div>
                    </div>
                    <div class="mb-2">
                        <button type="submit" class="btn btn-primary">Sign Up</button>
                    </div>
                </form>
                <hr>
                <div class="container d-inline-flex mx-0">
                    <p class="me-2 text-dark">Already Have an Account?</p>
                    <a class="link-dark" href="/login">Log In</a>
                </div>
            </div>
        </div>
    </div>
</div>