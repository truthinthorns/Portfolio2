<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up | Student Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body style="background-color: #00916E;">
    <main>
        <div class="row m-5">
            <div class="col-4 mx-auto">
                <%- include('./partials/flash') %>
                <div class="card">
                    <div class="card-body mx-auto">
                        <h2 class="card-title">Sign Up</h2>
                    </div>
                    <div class="card-body mx-auto">
                        <form action="/signup" method="post" class="validate-form" novalidate>
                            <div class="mb-2">
                                <label for="s_fullnameInput" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="s_fullnameInput" name="fullname"
                                    required>
                            </div>
                            <div class="mb-2">
                                <label for="s_usernameInput" class="form-label">Username</label>
                                <input type="text" class="form-control" id="s_usernameInput" name="username" aria-describedby="s_usernameHelp"
                                    required>
                                <div id="s_usernameHelp" class="form-text">This is what you will use to login.</div>
                            </div>
                            <div class="mb-2">
                                <label for="s_ssnInput" class="form-label">Social Security Number</label>
                                <input type="text" pattern="[0-9]{9}" class="form-control" id="s_ssnInput"
                                    name="ssn" required>
                            </div>
                            <div class="mb-2">
                                <label for="s_dobInput" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="s_dobInput" name="dob" required>
                            </div>
                            <div class="mb-2">
                                <label for="s_emailInput" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="s_emailInput"
                                    aria-describedby="s_emailHelp" name="email" required>
                            </div>
                            <div class="mb-4">
                                <label for="s_passwordInput" class="form-label">Password</label>
                                <input type="password" class="form-control" id="s_passwordInput"
                                    aria-describedby="s_passwordHelp" name="password" required>
                                <div id="s_passwordHelp" class="form-text">Password Format</div>
                            </div>
                            <div class="mb-2">
                                <button type="submit" class="btn btn-primary">Sign Up</button>
                            </div>
                        </form>
                        <hr>
                        <div class="container d-inline-flex mx-0">
                            <p class="me-2">Already Have an Account?</p>
                            <a class="link-dark" href="/login">Log In</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

    <script>// Example starter JavaScript for disabling form submissions if there are invalid fields
        (() => {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.validate-form')

            // Loop over them and prevent submission
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
</body>

</html>

</html>